<%!
import time

def date_format(s):
    try:
        return time.strftime('%Y-%m-%d', time.gmtime(float(s)))
    except:
        return s
%>\
<!DOCTYPE html>
<html lang="${ site_lang or 'en-us' }">

  ${ self.head() }

  <% body_class = ' class="{}"'.format(site_body_css_class) if site_body_css_class else '' %>
  <body${body_class}>

    ${ self.sidebar() }

    <!-- Wrap is the content to shift when toggling the sidebar. We wrap the
         content to avoid any CSS collisions with our real content. -->
    <div class="wrap">
      <div class="masthead">
        <div class="container">
          <h3 class="masthead-title">
            <a href="/" title="Home">${ site_title or '(SITE_TITLE MISSING)' }</a>
            <small>${ site_tagline or '(SITE_TAGLINE MISSING)' }</small>
          </h3>
        </div>
      </div>

      <div class="container content">
        <%block name="content">${ CONTENT }</%block>
      </div>
    </div>

    <label for="sidebar-checkbox" class="sidebar-toggle"></label>

    <script src='/js/script.js'></script>
  </body>
</html>

## PARTS OF PAGE

<%def name="head()">
<head>
  <link href="http://gmpg.org/xfn/11" rel="profile">
  <meta http-equiv="content-type" content="text/html; charset=utf-8">

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">

  <title>
    ${ self.page_title() }
  </title>

  <link rel="stylesheet" href="/css/poole.css">
  <link rel="stylesheet" href="/css/syntax.css">
  <link rel="stylesheet" href="/css/lanyon.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Serif:400,400italic,700%7CPT+Sans:400">
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/apple-touch-icon-precomposed.png">
  <link rel="shortcut icon" href="/favicon.ico">

  % if google_analytics_id:
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', '${ google_analytics_id }', 'auto');
    ga('send', 'pageview');
  </script>
  % endif
</head>
</%def>

<%def name="page_title()">
% if title and site_title:
  ${ title } &middot; ${ site_title }
% elif title:
  ${ title }
% elif site_title:
  ${ site_title } &middot; ${ site_tagline or '-' }
% endif
</%def>

<%def name="sidebar()">
<!-- Target for toggling the sidebar `.sidebar-checkbox` is for regular
     styles, `#sidebar-checkbox` for behavior. -->
<input type="checkbox" class="sidebar-checkbox" id="sidebar-checkbox">

<!-- Toggleable sidebar -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-item">
    <p>${ site_description or '(MISSING SITE_DESCRIPTION)' }</p>
  </div>

  <nav class="sidebar-nav">
    <a class="sidebar-nav-item${ ' active' if SELF_URL == '/index.html' else '' }" href="/">Home</a>

    <%
      # pages are mdcontent items with template 'base/page.mhtml'
      pages = [_ for _ in MDCONTENT if _['template'] == 'base/page.mhtml']
      pages.sort(key=lambda p: p['url'])
    %>
    % for p in pages:
      % if p['data'].get('title'):
        <a class="sidebar-nav-item${ ' active' if p['url'] == SELF_URL else ''}" href="${ p['url'] }">${ p['data']['title'] }</a>
      % endif
    % endfor
  </nav>

  <div class="sidebar-item">
    <p>
      &copy; ${ site_author or '' } ${ site_year or 2021 }. All rights reserved.
    </p>
  </div>
</div>
</%def>

## DATA DEFS

<%def name="all_posts(except_self=True)"><%
    if except_self:
        posts = [_ for _ in MDCONTENT if _['url'] != SELF_URL and _['url'].startswith('/posts/')]
    else:
        posts = [_ for _ in MDCONTENT if _['url'].startswith('/posts/')]
    posts.sort(key=lambda x: x['data'].get('pubdate', x['data']['MTIME']), reverse=True)
    return posts
%></%def>

